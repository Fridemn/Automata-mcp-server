# Automata MCP Server Configuration

# Server configuration
HOST=localhost
PORT=8000

# Production workers (only used in prod.py)
# 生产环境的工作进程数（仅在 prod.py 中使用）
WORKERS=4

# API Keys
AUTOMATA_API_KEY=your_automata_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# LLM Configuration
OPENAI_MODEL=your_openai_model_here
OPENAI_BASE_URL=https://api.your-llm-provider.com/v1/openai

# Security Configuration
# 安全配置

# CORS Configuration - Comma-separated list of allowed origins
# CORS 配置 - 允许的源地址列表，用逗号分隔
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,https://yourdomain.com

# CORS Methods - Comma-separated list of allowed HTTP methods
# CORS 方法 - 允许的 HTTP 方法列表，用逗号分隔
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS

# CORS Headers - Comma-separated list of allowed headers
# CORS 头部 - 允许的头部列表，用逗号分隔
ALLOWED_HEADERS=X-API-Key,Content-Type,Authorization

# Security Headers Configuration
# 安全头部配置

# Content Security Policy - Controls which resources can be loaded
# 内容安全策略 - 控制哪些资源可以被加载
CSP_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'

# HSTS Configuration - HTTP Strict Transport Security
# HSTS 配置 - HTTP 严格传输安全
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=false

# Security Debug Mode - Set to true for development, false for production
# 安全调试模式 - 开发环境设为 true，生产环境设为 false
SECURITY_DEBUG=false
